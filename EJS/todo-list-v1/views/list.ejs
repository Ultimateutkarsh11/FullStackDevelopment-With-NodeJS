<%- include("header") -%>
<div>
        <h1 class="box" id="heading"><%= listTitle %></h1>
    </div>
    <!-- Covered the JS logic i.e if and else statement with Scriplet tag to tell the EJS file that it's a JS part -->
    <div class="box">
            <% for (var i=0; i<newListItems.length ;i++ ){ %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= newListItems[i] %></p>
                </div>
            <% } %>
            <form class="item" action="/" method="post">
                <input placeholder="New Item" type="text" name="newItem" autocomplete="off">
                <button type="submit" name="list" value=<%=listTitle %>>+</button>
            </form>
        
    </div>
<%- include("footer") -%>